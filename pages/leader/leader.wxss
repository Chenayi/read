/* pages/leader/leader.wxss */
.leader{
  height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #444;
}

.leader-nav{
  margin: 0 30rpx;
}

.leader-image{
  width:  100%;
  height: 302rpx;
  border-radius: 15rpx;
}

.leader-item-title{
  font-size: 36rpx;
  font-weight: bold;
  color: #444;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  margin: 20rpx 0;
}

.leader-item-content{
  font-size: 32rpx;
  color: #7F7F7F;
  margin-bottom: 60rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}